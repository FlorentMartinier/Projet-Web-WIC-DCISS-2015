}

footer{
    text-align: center;
    width: 100%;
    height:10%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 30px;
    padding-top: 10px;
    padding-bottom: 10px;
    color: white;
    font-size: 15px;
    background-color: #3498db;
    border: 2px solid #666666;
    border-radius:30px;
}

#btnCatalog,#btnSearch {
    background: #3498db;
    border-radius: 30px;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 16px;
    padding: 2px 20px 2px 20px;
    margin-bottom: 10px;
    text-decoration: none;
}

#btnCatalog:hover,#btnSearch:hover {
    background: #3cb0fd;
    text-decoration: none;
}



