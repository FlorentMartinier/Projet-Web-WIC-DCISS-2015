body {
    font-family: Verdana;
    background-image: url("../images/background.jpg");
    background-repeat: repeat
}

tr {
    vertical-align: middle;
}

#player {
    margin: auto;
    margin-top: 15px;
    margin-bottom: 15px;
    padding-top: 20px;
    padding-bottom: 20px;
    width: 900px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
}

#playListBtn {
    margin-left: auto;
    margin-right: auto;
    margin-top:10px;
    margin-bottom:10px;
    width: 900px;
    text-align: center;
}

#btnCatalog, #btnSearch {
    cursor: pointer;
    margin: 5px;
    border: 1px solid black;
    padding-left: 5px;
    padding-right: 5px;
}

#playlist {
    margin: auto;
    margin-top: 5px;
    width: 900px;
    min-height: 400px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
    position: relative;
}

#playlist .loading, #modalContentSearch .loading, #modalContentCatalog .loading {
    text-align: center;
    margin-top: 60px;
}

#playlist .loading, #currentTrack .loading {
    position: absolute;
    width: 100%;
}
#currentTrack .loading {
    margin-top: 30px;
 }

#currentTrack {
    margin: auto;
    text-align: center;
    position: relative;
}

#currentTrack table {
    margin: auto;
}

#currentTrack .cover{
    width: 100px;
    border: 2px solid #ccc;
}

#proposedTracks .cover{
     width: 40px;
 }

#progressBar {
    position: relative;
    height: 13px;
    width: 600px;
    border: 1px solid black;
    margin: auto;
    padding: 1px;
}

#progressBarInfo {
    position: absolute;
    width: 100%;
    z-index: 100;
    font-size: 10px;
    text-align: center;
}

#progressBarInt {
    height: 13px;
    width: 0%;
    background-color: #f1eff8;
}

#modal{
    display: none;
    position: absolute;
    top:0;
    bottom:0;
    right:0;
    left:0;
    overflow: hidden;
    background-image: url("../images/bgModal.png");
    z-index: 200;
}

#modalContentSearch, #modalContentCatalog {
    display: none;
    background-color: #e7e8f1;
    border: 1px solid grey;
    width: 900px;
    height: 90%;
    margin: auto;
    margin-top: 30px;
}

.loading {
    display: none;
}

.addButton {
    cursor: pointer;
}
.addButton:hover {
    color: #444;
}


