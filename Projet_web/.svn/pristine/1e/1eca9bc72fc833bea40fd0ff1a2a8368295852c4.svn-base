#btnCatalog, #btnSearch, #btnConnexion,#btnCreate,#btnDeconnexion {
    background: #A0522D;
    border-radius: 30px;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 16px;
    padding: 2px 20px 2px 20px;
    margin-bottom: 10px;
    text-decoration: none;
    cursor: pointer;
    margin: 5px;
    border: 1px solid black;
  
}

#btnCatalog:hover,#btnSearch:hover,#btnConnexion:hover,#btnCreate:hover,#btnDeconnexion :hover {
    background: #D2B48C;
    text-decoration: none;
}

#btnUserSession{
    margin: auto;
    margin-bottom: 17px;
    margin-top: 10px;
    width: 900px;
}

.center {
    text-align: center;
}

.right {
    text-align: right;
    margin-right: 10px;
}

.fond {
