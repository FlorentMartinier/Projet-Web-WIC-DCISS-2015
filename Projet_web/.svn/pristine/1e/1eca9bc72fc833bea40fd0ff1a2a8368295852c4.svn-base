body {
    font-family: Verdana;
    background: url("../images/background.jpg") repeat;
}

footer{
    text-align: center;
    margin: auto;
    margin-top: 30px;
    padding: 10px;
    color: white;
    font-size: 15px;
    background-color: #A0522D;
    border: 2px solid black;
    border-radius:30px;
}

footer p {
    margin: 0 0 5px 0;
}

tr {
    vertical-align: middle;
}

th{
    text-align: left;
}

h2 {
    margin-top: 0;
    margin-bottom: 10px;
}

#title h2{
    text-align: center;
    font-size: 50px;
    font-family: 'call_me_mayberegular', Fallback, sans-serif;
    margin-top:-10px;
    margin-bottom: 0px;
}

#player {
    margin: auto;
    margin-top: 10px;
    margin-bottom: 15px;
    padding-bottom: 20px;
    width: 900px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
}

#playListBtn {
    margin-left: auto;
    margin-right: auto;
    margin-top:10px;
    margin-bottom:10px;
    width: 900px;
    text-align: center;
}


#playlist {
    margin: auto;
    margin-top: 5px;
    width: 900px;
    min-height: 440px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
    position: relative;
	
}

#playlist .loading, #modalContentSearch .loading, #modalContentCatalog .loading {
    text-align: center;
    margin-top: 60px;
   
}

#modalContentSearch .result .tdCover img, #modalContentCatalog .result .tdCover img {
    width: 32px !important;
    margin: 2px 2px -2px 2px;
}

.tdGenre {
    display: none;
}

#playlist .loading, #currentTrack .loading {
    position: absolute;
    width: 100%;
}

.iconSearchArtist {
    margin-right: -35px;
    color: #9D9D9D;
}

#currentTrack #idCurrentTrack {
    display: none;
}

#currentTrack .loading {
    margin-top: 30px;
 }

#currentTrack {
    margin: auto;
    text-align: center;
    position: relative;
}

#currentTrack table {
    margin: auto;
    width: 540px;
    text-align: left;
}

#CTCover{
    width: 106px;
}

#currentTrack .cover{
    width: 100px;
    border: 2px solid #ccc;
}

#currentTrack #CTArtistName {
    font-size: 18px;
    font-weight: bold;
    font-variant: small-caps;
}

#currentTrack #CTTitle {
    font-weight: bold;
    font-size: 15px;
}

#currentTrack #CTAlbumName, #currentTrack #CTRelease, #currentTrack #CTGenre {
    font-size: 14px;
}

#currentTrack .tdVolume {
    width: 34px;
    text-align: left;
}

#currentTrack #sliderVolume {
    height: 70px;
    margin: auto;
    margin-bottom: 3px;
}

#currentTrack #iconeVolume  {
    padding-top: 5px;
    color: #222;
}

#proposedTracks {
    margin-bottom: 10px;
}

#proposedTracks .cover{
    width: 40px;
    margin-top: 2px;
 }

.tabListChansons {
    margin: auto;
    width: 98%;
    border-collapse: collapse;
}


.tabListChansons th {
    text-align: center;
    font-size: 15px;
    font-variant: small-caps;
    border-bottom: 1px solid #444;
    padding-bottom: 3px;
}

.tabListChansons tr:nth-child(even) {
    background-color: #F9F9Fb;
}

.tabListChansons tr:nth-child(odd) {
    background-color: transparent;
}

#proposedTracks .tdCover {
    width: 44px;
}

#proposedTracks .up, #proposedTracks .plus {
    margin-left: 6px;
    margin-top: 6px;
    display: none;
}

#proposedTracks .up {
    color: #1f60bc;
}

#proposedTracks .plus {
    color: #186b19;
}

.tabListChansons .tdDuree, .tabListChansons .tdVotes, .tabListChansons .tdVoter  {
    width: 55px;
}

.tabListChansons .tdTitre {
    width: 380px;
}

#progressBar {
    position: relative;
    height: 14px;
    width: 540px;
    margin: auto;
    padding: 1px;
    border: 1px solid #888;
    background: #eeeeee url("images/ui-bg_highlight-soft_100_eeeeee_1x100.png") 50% top repeat-x;
    border-radius: 4px;
}

#progressBarInfo {
    position: absolute;
    width: 100%;
    z-index: 100;
    font-size: 10px;
    text-align: center;
}

#progressBarInt {
    height: 14px;
    width: 0%;
    background-color: #d7d5d8;
    border-radius: 3px;
}

#InfoMsg {
    position: fixed;
    bottom: 0;
    left: 65%;
    width: 260px;
    height: 90px;
    border: 2px solid black;
    margin-bottom: -120px;
    background-color: white;
    opacity: 0.9;
    border-radius: 3px;
    z-index: 300;
}

#InfoMsg h4 {
    margin: 3px 3px 3px 6px;
    font-variant: small-caps;
    font-size: 18px;
}

#InfoMsg p {
    margin: 6px 6px 6px 5px;
    font-size: 15px;
    text-align: justify;
}

#modal{
    display: none;
    position: absolute;
    top:0;
    bottom:0;
    right:0;
    left:0;
    background-color: rgba(255, 255, 255, 0.5);
    z-index: 200;
}

#modalContentSearch, #modalContentCatalog {
    display: none;
    background-color: #e7e8f1;
    border-radius:30px;
    border : 2px solid black;
    width: 900px;
    height: 90%;
    margin: auto;
    margin-top: 30px;
}

#modalLogin, #modalCreateProfile {
    display: none;
    background-color: #e7e8f1;
    border-radius:30px;
    border : 2px solid black;
    width: 500px;
    height: 400px;
    margin: auto;
    margin-top: 30px;
}


#modalContentSearch .result, #modalContentCatalog .result {
    overflow-y: scroll;
    height: 83%;
    margin-left: 10px;
    margin-right: 10px;
}

#modalContentSearch h4, #modalContentCatalog h4{  
    color:black;
}

#searchArtist {
    padding: 10px 10px 10px 35px;
    width: 270px;
    border: 1px solid #CCC;
    border-radius: 4px;
    box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
    width: 450px;
}

#searchArtist:focus {
    background-color: #FFF;
    border-color: #95928d;
    outline: none;
    box-shadow: 0 0 0 1px #c3c0bb inset;
}

#proposedTracks .loading, #modal .loading {
    display: none;
}

.addButton {
    cursor: pointer;
}
.addButton:hover {
    color: #444;
}

