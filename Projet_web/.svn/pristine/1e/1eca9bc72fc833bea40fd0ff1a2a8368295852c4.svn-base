.closeModal{
    background: black;
    border-radius: 30px;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 16px;
    padding: 2px 20px 2px 20px;
    margin-bottom: 10px;
    text-decoration: none;
    float:right;
    margin-right:13px;
    margin-top:10px;
    cursor:pointer;
}
   
.refreshCatalog{
    float:right;
    cursor:pointer;
    margin-right:20px;
    margin-top:6px;
 }

#pasMetal{
    display:none;
	cursor:pointer;
}

#metal{
    display:inline;
}

#formCreateUser, #formConnexion {
    text-align: left;
}

#formCreateUser input, #formConnexion input {
    display: block;
    width: 90%;
    margin: auto auto 20px;
    font-size: 13px;
    font-weight: bold;
    line-height: 28px;
}

#formConnexion label, #formCreateUser label{
    font-size: 13px;
    font-weight: bold;
    line-height: 28px;
    margin-bottom: 5px;
    margin-left: 20px;
    width: 120px;
}

 #validateCreateAccount, #validateConnect{
    margin: auto;
}

