body {
    font-family: Verdana;
    background: url("../images/background.jpg") repeat;
}

tr {
    vertical-align: middle;
}

th{
    text-align: left;
}

h2 {
    margin-top: 0;
    margin-bottom: 10px;
}

#title h2{
   text-align: center;
   font-size: 50px;
   font-family: 'call_me_mayberegular', Fallback, sans-serif;
   margin-top:-10px;
   margin-bottom: 0px;
}

footer{
    text-align: center;
    width: 100%;
    height:10%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 30px;
    padding-top: 10px;
    padding-bottom: 10px;
    color: white;
    font-size: 15px;
    background-color: #A0522D;
    border: 2px solid #666666;
    border-radius:30px;
}

#player {
    margin: auto;
    margin-top: 10px;
    margin-bottom: 15px;
    padding-bottom: 20px;
    width: 900px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
}

#playListBtn {
    margin-left: auto;
    margin-right: auto;
    margin-top:10px;
    margin-bottom:10px;
    width: 900px;
    text-align: center;
}

#btnCatalog, #btnSearch {
    cursor: pointer;
    margin: 5px;
    border: 1px solid black;
    padding-left: 5px;
    padding-right: 5px;
}

#playlist {
    margin: auto;
    margin-top: 5px;
    width: 900px;
    min-height: 400px;
    border: 2px solid black;
    background-color: white;
    border-radius: 10px;
    position: relative;
	
}

#playlist .loading, #modalContentSearch .loading, #modalContentCatalog .loading {
    text-align: center;
    margin-top: 60px;
   
}

#modalContentSearch .result .tdCover, #modalContentCatalog .result .tdCover {
    width: 27px !important;
}

#playlist .loading, #currentTrack .loading {
    position: absolute;
    width: 100%;
}

.iconSearchArtist {
    margin-right: -35px;
    color: #9D9D9D;
}

#currentTrack #idCurrentTrack {
    display: none;
}

#currentTrack .loading {
    margin-top: 30px;
 }

#currentTrack {
    margin: auto;
    text-align: center;
    position: relative;
}

#currentTrack table {
    margin: auto;
    width: 540px;
}

#currentTrack .cover{
    width: 100px;
    border: 2px solid #ccc;
}

#currentTrack #CTArtistName {
    font-weight: bold;
    font-variant: small-caps;
}

#currentTrack .tdVolume {
    width: 34px;
    text-align: left;
}

#currentTrack #sliderVolume {
    height: 70px;
    margin: auto;
    margin-bottom: 3px;
}

#currentTrack #iconeVolume  {
    padding-top: 5px;
    color: #222;
}

#proposedTracks {
   height:267px;
   overflow-y:auto;
   overflow-x:auto;

 }

#proposedTracks .cover{
    width: 40px;
    margin-top: 2px;
 }

.tabListChansons {
    margin: auto;
    width: 98%;
    border-collapse: collapse;
}


.tabListChansons th {
    text-align: center;
    font-size: 15px;
    font-variant: small-caps;
    border-bottom: 1px solid #444;
    padding-bottom: 3px;
}

.tabListChansons tr:nth-child(even) {
    background-color: #eeeef5;
}

#proposedTracks .tdCover {
    width: 44px;
}

.tabListChansons .tdDuree, .tabListChansons .tdVotes, .tabListChansons .tdVoter  {
    width: 55px;
}

#progressBar {
    position: relative;
    height: 14px;
    width: 540px;
    margin: auto;
    padding: 1px;
    border: 1px solid #888;
    background: #eeeeee url("images/ui-bg_highlight-soft_100_eeeeee_1x100.png") 50% top repeat-x;
    border-radius: 4px;
}

#progressBarInfo {
    position: absolute;
    width: 100%;
    z-index: 100;
    font-size: 10px;
    text-align: center;
}

#progressBarInt {
    height: 14px;
    width: 0%;
    background-color: #d7d5d8;
    border-radius: 3px;
}

#modal{
    display: none;
    position: absolute;
    top:0;
    bottom:0;
    right:0;
    left:0;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.5);
    z-index: 200;
   ;
}

#modalContentSearch, #modalContentCatalog {
    display: none;
    background-color: #e7e8f1;
    border-radius:30px;
    border : 2px solid black;
    width: 900px;
    height: 90%;
    margin: auto;
    margin-top: 30px;
}

#modalContentSearch h4, #modalContentCatalog h4{  
    color:black;
}

#searchArtist {
    padding: 10px 10px 10px 35px;
    width: 270px;
    border: 1px solid #CCC;
    border-radius: 4px;
    box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
    width: 450px;
}

#searchArtist:focus {
    background-color: #FFF;
    border-color: #95928d;
    outline: none;
    box-shadow: 0 0 0 1px #c3c0bb inset;
}

.loading {
    display: none;
}

.addButton {
    cursor: pointer;
}
.addButton:hover {
    color: #444;
}

