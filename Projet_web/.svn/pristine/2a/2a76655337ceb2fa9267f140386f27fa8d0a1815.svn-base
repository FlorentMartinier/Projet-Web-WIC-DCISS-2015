#btnCatalog, #btnSearch {
    background: #A0522D;
    border-radius: 30px;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 16px;
    padding: 2px 20px 2px 20px;
    margin-bottom: 10px;
    text-decoration: none;
}

#btnCatalog:hover,#btnSearch:hover {
    background: #D2B48C;
    text-decoration: none;
}

.center {
    text-align: center;
}

.fond {
    position:relative;
    margin:0px auto;
    width:350px;
    background:#fff;
    border-radius:10px;
    z-index:10;
    height:110px;
}
 
.ruban {
    background:#D2B48C;
    height:50px;
    width:933px;
    position:relative;
    left:-291px;
    top:30px;
    float:left;
    box-shadow:0px 0px 4px rgba(0,0,0,0.55);
    z-index:100;
}
 
.ruban h3 {
    font-size:35px;
    color:white;
    text-shadow:1px 1px 2px rgba(0,0,0,0.2);
    text-align:center;
    margin:0px;
    font-family: 'call_me_mayberegular', Fallback, sans-serif;
}
 
.ruban_gauche {
    border: 15px solid transparent;
    border-right-color: #A0522D;
    height:0px;
    width:0px;
    position:relative;
    left:-307px;
    top:65px;
    z-index:-1;
}
 
.ruban_droit {
    border: 15px solid transparent;
    border-left-color: #A0522D;
    height:0px;
    width:0px;
    position:relative;
    left:627px;
    top:35px;
    z-index:-1;
}

.closeModal{
    background: black;
    border-radius: 30px;
    box-shadow: 0px 1px 3px #666666;
    font-family: Arial;
    color: #ffffff;
    font-size: 16px;
    padding: 2px 20px 2px 20px;
    margin-bottom: 10px;
    text-decoration: none;
    float:right;
    margin-right:13px;
    margin-top:10px;
    cursor:pointer;
}
   
.refreshCatalog{
    float:right;
    cursor:pointer;
    margin-right:10px;
    margin-top:4px;
 }

#pasMetal{
	display:none;
	cursor:pointer;
}

#metal{
	display:inline;
	cursor:pointer;
}